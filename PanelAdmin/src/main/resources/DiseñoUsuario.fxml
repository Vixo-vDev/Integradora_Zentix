<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="vista"
            stylesheets="@./CSS/EstiloUsuario.css">

    <center>
        <VBox spacing="20" styleClass="contenedor-principal">
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="panel-encabezado">
                <Label text="Gestión de Usuarios" styleClass="titulo-principal"/>
                <Button text="+ Nuevo Usuario" onAction="#mostrarFormularioNuevoUsuario" styleClass="boton-primario"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="panel-filtros">
                <TextField fx:id="tfBusqueda" promptText="Buscar usuario..." prefWidth="250"/>
                <Label text="Rol:"/>
                <ComboBox fx:id="cbFiltroRol" prefWidth="120"/>
                <Label text="Estado:"/>
                <ComboBox fx:id="cbFiltroEstado" prefWidth="120"/>
            </HBox>

            <TableView fx:id="tablaUsuarios" styleClass="tabla-usuarios">
                <columns>
                    <TableColumn text="Nombre" prefWidth="150"/>
                    <TableColumn text="Usuario" prefWidth="100"/>
                    <TableColumn text="Email" prefWidth="200"/>
                    <TableColumn text="Rol" prefWidth="100"/>
                    <TableColumn text="Estado" prefWidth="80"/>
                    <TableColumn text="Último Acceso" prefWidth="120"/>
                    <TableColumn text="Acciones" prefWidth="300"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>