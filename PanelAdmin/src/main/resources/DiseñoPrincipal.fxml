<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.paneladmin.Controladores.ControladorPrincipal"
            stylesheets="@./CSS/EstiloPrincipal.css"
            id="raiz">

    <!-- Barra superior -->
    <top>
        <HBox fx:id="barraSuperior" styleClass="barra-superior">
            <!-- Contenido de la barra superior -->
            <Label text="Sistema de Administración" styleClass="titulo-aplicacion"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnNotificaciones" styleClass="boton-icono">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20">
                        <image>
                            <Image url="@iconos/notificaciones.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnSalir" text="Salir" styleClass="boton-salir"/>
        </HBox>
    </top>

    <!-- Barra lateral -->
    <left>
        <VBox fx:id="barraLateral" styleClass="barra-lateral">
            <Button fx:id="btnDashboard" text="Dashboard" styleClass="boton-menu"/>
            <Button fx:id="btnUsuarios" text="Usuarios" styleClass="boton-menu"/>
            <Button fx:id="btnInventario" text="Inventario" styleClass="boton-menu"/>
            <Button fx:id="btnEstadisticas" text="Estadísticas" styleClass="boton-menu"/>
            <Button fx:id="btnSolicitudes" text="Solicitudes" styleClass="boton-menu"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Label text="Versión 1.0" styleClass="version-texto"/>
        </VBox>
    </left>

    <!-- Contenido central (se actualizará dinámicamente) -->
    <center>
        <StackPane fx:id="contenidoCentral"/>
    </center>
</BorderPane>