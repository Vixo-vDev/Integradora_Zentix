<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.CheckBox?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #ecf0f1;"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="interfaz.admin.controladores.GestionEquiposControlador">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Gestión de Equipos" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="Código de Bien:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="campoCodigoBien" promptText="Ej. TEC-001" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Descripción:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <TextField fx:id="campoDescripcion" promptText="Descripción del equipo" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                <Label text="Marca:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="campoMarca" promptText="Marca del equipo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Modelo:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField fx:id="campoModelo" promptText="Modelo del equipo" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Label text="Número de Serie:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="campoNumeroSerie" promptText="Número de serie (opcional)" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Tipo de Equipo:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <ComboBox fx:id="campoTipoEquipo" prefWidth="180.0" promptText="Seleccionar Tipo" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                <Label text="Disponible:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <CheckBox fx:id="checkBoxDisponible" text="Marcar si está disponible" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#crearEquipo" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #27ae60;" text="Crear" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#actualizarEquipo" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #2980b9;" text="Actualizar" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#limpiarCampos" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #f39c12;" text="Limpiar" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#eliminarEquipo" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #e74c3c;" text="Eliminar" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>

        <Label fx:id="etiquetaMensaje" textFill="#2c3e50" />

        <TableView fx:id="tablaEquipos" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colIdEquipo" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colCodigoBien" prefWidth="100.0" text="Cód. Bien" />
                <TableColumn fx:id="colDescripcion" prefWidth="180.0" text="Descripción" />
                <TableColumn fx:id="colMarca" prefWidth="100.0" text="Marca" />
                <TableColumn fx:id="colModelo" prefWidth="100.0" text="Modelo" />
                <TableColumn fx:id="colNumeroSerie" prefWidth="120.0" text="Nro. Serie" />
                <TableColumn fx:id="colDisponible" prefWidth="70.0" text="Disp." />
                <TableColumn fx:id="colTipoEquipo" prefWidth="100.0" text="Tipo Equipo" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>